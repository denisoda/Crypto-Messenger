<Window x:Class="DesktopClient.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopClient.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ChatWindow" Height="300" Width="415.772">
    <Window.Resources>
        <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Black" />
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,-0.4,-3.6">
        <Button Content="Send" HorizontalAlignment="Left" Margin="327,213,0,0" VerticalAlignment="Top" Width="81" Height="31"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="213" Width="408"><Run/><LineBreak/><Run/></TextBlock>
        <TextBox HorizontalAlignment="Left" Height="31" Margin="0,213,0,0" TextWrapping="Wrap" Text="Type your message" VerticalAlignment="Top" Width="327"/>
    </Grid>
</Window>
